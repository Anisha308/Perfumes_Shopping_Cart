<%- include('../layouts/userHeader.ejs') %>


	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Login/Register</h1>
					<nav class="d-flex align-items-center">
						<a href="/home">Back to Home<span class="lnr lnr-arrow-left"></span></a>
						
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->

	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<img class="img-fluid" src="images/bottleperfume.jpg" alt="">
						<div class="hover">
							<!-- <h4>New to our website?</h4> -->
							<p>Perfumes are much more than just a smell. They have the power to evoke feelings of love, energy, power, happiness, awe, sensuality and peace. </p>
							<a class="primary-btn" href="/profile">Back to Profile</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner">
						<h3>Change Password!</h3>
						<form class="row login_form" action="/changepassword" method="POST" id="contactForm" novalidate="novalidate">
				 <div class="col-md-12 form-group">
								<input id="password-field"  type="password" class="form-control"  name="currentPassword" placeholder="Current Password" onfocus="this.placeholder = ''" onblur="this.placeholder = ' Confirm password'">
							</div>
              <div class="col-md-12 form-group">
								<input id="password-field"type="password" class="form-control"  name="newPassword" placeholder="New password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'password'">
							</div>
               <div class="col-md-12 form-group">
								<input id="password-field"  type="password" class="form-control"  name="confirmPassword" placeholder="Confirm Password" onfocus="this.placeholder = ''" onblur="this.placeholder = ' Confirm password'">
							</div>
							
							<div class="col-md-12 form-group">
								<button type="submit" value="submit" class="primary-btn">Submit</button>
								<!-- <a href="/forgotpassword" >Forgot Password?</a> -->
							</div>
							
				<%=(typeof message!=='undefined' )?message:""%>
			</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	
<%- include('../layouts/userFooter.ejs') %>
